@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/css/jogador.css">

@if (ViewBag.Username == null)
{
    <li>
        <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
    </li>
}
else
{
    <!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">
            <form method="post" action="@Url.Action("Cadastrar")" class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>

                <input name="Nome" class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:">

                <input name="Email" class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:">
                
                <input name="Senha" class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:">



                <select required name="Equipe" class="campo-entrada" id="equipe-select">
                    <option value="0">Selecione uma opção</option>

                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <option value="@equipe.IdEquipe">@equipe.Nome</option>
                    }
                </select>

                <button type="submit">Cadastrar</button>

            </form>


            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Equipe</th>
                        <th>Ações</th>
                    </tr>
                </thead>

                <tbody>
                        @foreach (Jogador jogador in ViewBag.Jogador)
                        {
                            <tr>
                            <td>@jogador.IdJogador</td>
                            <td>@jogador.Nome</td>
                            <td>@jogador.Email</td>
                            <td>
                                <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="" width="50px" height="50px">
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                                    asp-route-id="@jogador.IdJogador"><img class="yellow-trash" src="../assets/trash.png"
                                        alt=""></a>

                                <a asp-area="" asp-controller="Jogador" asp-action="Editar"
                                    asp-route-id="@jogador.IdJogador"><img src="" alt=""><img src="~/assets/pen-solid.svg"
                                        alt=""></a>
                            </td>                                
                            </tr>
                        }
                </tbody>
            </table>
        </section>
    </main>
}

